{
  "compilerOptions": {
    "target": "ESNext",                         
    "lib": ["DOM", "DOM.Iterable", "ESNext"],  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,   
    "esModuleInterop": true,          
    "module": "ESNext",                       
    "moduleResolution": "Node",   
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["*"],
      "@src/*": [
        "src/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
    }
  },
  "include": ["src"]
}